<body>

<div id="header">
  <button onclick="changeDay(-1)">◀</button>
  <div id="selectedDate" onclick="selectDate()"></div>
  <button onclick="changeDay(1)">▶</button>
</div>

<div id="calendarContainer">
  <div id="calendar"></div>
</div>

<script>
let calendar;
let currentDate = new Date();

function formatDate(date) {
  return date.getFullYear() + '년 ' + (date.getMonth() + 1) + '월 ' + date.getDate() + '일';
}

function renderCalendar(date) {
  if (calendar) calendar.destroy();

  document.getElementById('selectedDate').textContent = formatDate(date);

  calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
    initialView: 'listDay',
    initialDate: date,
    locale: 'ko',
    height: 'auto',
    headerToolbar: false,
    events: function(fetchInfo, successCallback, failureCallback) {
      fetch('https://script.google.com/macros/s/AKfycbyiXa9_q-Lik-b-JQoXKBGwi4IvWu4v4g5nbMALui3PQ8WID9Zd4cOZVTL1rGhtjUYaEw/exec')  // <- GAS 웹앱 URL을 입력하세요!
      .then(response => response.json())
      .then(data => successCallback(data))
      .catch(err => failureCallback(err));
    },
    eventClick: function(info) {
      info.jsEvent.preventDefault(); // 클릭 방지
    }
  });

  calendar.render();
}

function changeDay(diff) {
  currentDate.setDate(currentDate.getDate() + diff);
  renderCalendar(currentDate);
}

function selectDate() {
  let dateInput = document.createElement('input');
  dateInput.type = 'date';
  dateInput.style.visibility = 'hidden';
  document.body.appendChild(dateInput);

  dateInput.addEventListener('change', function() {
    currentDate = new Date(this.value);
    renderCalendar(currentDate);
    document.body.removeChild(dateInput);
  });

  dateInput.click();
}

// 최초 렌더링
renderCalendar(currentDate);
</script>

</body>
</html>
